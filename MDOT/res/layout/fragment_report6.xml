<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblAdverseEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has There Been Adverse Events ?"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <RadioGroup
            android:id="@+id/rgAdverseEvents"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/rbtnAdverseEventsYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/rbtnAdverseEventsNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                tools:ignore="HardcodedText" /> 
        </RadioGroup>
<TextView
                    android:id="@+id/lblAdverseEvent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adverse Event 1:"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />


            <EditText
                android:id="@+id/txtAdverseEvent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine" >

                <requestFocus />
            </EditText>
<TextView
                    android:id="@+id/lblAdverseEvent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adverse Event 2:"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/txtAdverseEvent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine" >

                <requestFocus />
            </EditText>
            <TextView
                    android:id="@+id/lblComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments:"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
             <EditText
                android:id="@+id/txtComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine" >

                <requestFocus />
            </EditText>

             <TextView
                 android:id="@+id/lblObserverName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Observer Name:"
                 android:textColor="#000"
                 android:textSize="18sp"
                 android:textStyle="bold"
                 tools:ignore="HardcodedText" />

             <ListView
                 android:id="@+id/lvObserverName"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >
             </ListView>
             
    </LinearLayout>

</ScrollView>