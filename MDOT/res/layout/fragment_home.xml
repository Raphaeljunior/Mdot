<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:ignore="ExtraText,ExtraText" >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/DOT_Daily_Report"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:onClick="btnDailyReport"
        android:text="DOT Daily Report"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Register_Patient"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:onClick="btnRegisterPatient"
        android:text="Register New Patient"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btntreatmentInfo"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:text="Treatment Information"
        android:textSize="25sp"
        android:textStyle="bold"
        android:onClick="btntreatmentinfo"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/RegisterAmbassador"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:text="Register Ambassador"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:onClick="btnRegisterAmbassador" />

    <Button
        android:id="@+id/View_Patients"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:enabled="true"
        android:minWidth="84dip"
        android:onClick="btnViewPatients"
        android:text="View Patients"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


</LinearLayout>
</ScrollView>