<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblTakeFoodB4Drug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did The Patient Take Any Food/Drink Before Taking Drug ?"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <RadioGroup
            android:id="@+id/rgFoodB4Drug"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/rbtnFoodB4DrugYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/rbtnFoodB4DrugNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/rbtnFoodB4DrugDontKnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don&apos;t Know"
                tools:ignore="HardcodedText" />

        </RadioGroup>

        <TextView
            android:id="@+id/lblWhatFoodOrDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Food Or Drink ?"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/txtTypeofFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>

</ScrollView>